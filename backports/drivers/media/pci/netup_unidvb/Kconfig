config BACKPORT_DVB_NETUP_UNIDVB
	tristate "NetUP Universal DVB card support"
	depends on !DVB_NETUP_UNIDVB
	depends on DVB_CORE && BACKPORT_VIDEO_DEV && PCI && I2C && SPI_MASTER
    select BACKPORT_VIDEOBUF2_DVB
    select BACKPORT_VIDEOBUF2_VMALLOC
	select DVB_HORUS3A if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_ASCOT2E if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_LNBH25 if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	select DVB_CXD2841ER if BACKPORT_MEDIA_SUBDRV_AUTOSELECT
	---help---
	  Support for NetUP PCI express Universal DVB card.

